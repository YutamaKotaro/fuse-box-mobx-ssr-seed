{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "outDir": "build",
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "pretty": true
    },
    "include": [
        "./src/**/*"
    ]
}